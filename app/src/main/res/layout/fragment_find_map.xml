<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff9ba966"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_woodtexture">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/page_lip_top"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:background="#00efefef"
        android:id="@+id/relativeLayout"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
        </RelativeLayout>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="  "
            android:id="@+id/buttonSearch"
            android:background="@drawable/find_button_search"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/editText2"
            android:background="#ffffffff"
            android:hint="Search by area e.g. Sandton"
            android:inputType="textImeMultiLine"
            android:imeActionLabel="Done"
            android:imeOptions="actionDone"
            android:lines="1"
            android:gravity="center_vertical"
            android:textColor="#ff666666"
            android:paddingLeft="10dp"
            android:layout_alignTop="@+id/buttonSearch"
            android:layout_toLeftOf="@+id/buttonSearch"
            android:layout_marginLeft="20dp" />

    </RelativeLayout>

</LinearLayout>