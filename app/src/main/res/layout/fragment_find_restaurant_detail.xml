<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff2f2f2"
        android:weightSum="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/background_woodtexture">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView"
                        android:background="@drawable/page_lip_top"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#00ffffff"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="0dp">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView2"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/find_venue_demoimage"
                        android:layout_alignParentEnd="true"
                        android:focusableInTouchMode="false" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:id="@+id/imageView3"
                        android:background="@drawable/overlay_dark"
                        android:layout_alignParentEnd="true"
                        android:layout_alignBottom="@+id/imageView2"
                        android:paddingBottom="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Loading ..."
                        android:id="@+id/textView6"
                        android:layout_alignTop="@+id/imageView3"
                        android:layout_alignStart="@+id/imageView2"
                        android:textColor="#ffffffff"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="0km"
                        android:id="@+id/textView7"
                        android:textColor="#ffffffff"
                        android:layout_alignTop="@+id/imageView3"
                        android:layout_alignEnd="@+id/imageView2"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp" />




                    <Button
                        style="@style/AppTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Get Directions"
                        android:id="@+id/button3"
                        android:drawableLeft="@drawable/find_venue_icon_getdirections"
                        android:textColor="#ffffffff"
                        android:textSize="12dp"
                        android:background="#00ffffff"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="0dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignEnd="@+id/textView77"
                        android:layout_below="@+id/textView77" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Loading ..."
                        android:id="@+id/textView77"
                        android:textColor="#ffffffff"
                        android:textSize="12dp"
                        android:layout_below="@+id/textView6"
                        android:layout_alignStart="@+id/textView6"
                        android:layout_marginBottom="0dp"
                        android:layout_toStartOf="@+id/textView7"
                        android:layout_alignEnd="@+id/textView7" />

                    <Button
                        style="@style/AppTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Loading ..."
                        android:id="@+id/buttonLogin"
                        android:drawableLeft="@drawable/find_venue_icon_contact"
                        android:textColor="#ffffffff"
                        android:textSize="12dp"
                        android:background="#00ffffff"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="0dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@+id/textView77"
                        android:layout_below="@+id/textView77" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffffff"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/favicon"
                        android:background="@drawable/profile_icon_favourites_dark"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/logouticon"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Loading ..."
                        android:padding="10dp"
                        android:id="@+id/textView3"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12dp"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/favicon" />

                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="CHOW Accredited Meals"
                    android:id="@+id/textView"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:paddingTop="10dp"
                    android:textColor="#ff666666"
                    android:textSize="14dp" />

                <com.chow.chow.chow.utility.ExpandableHeightGridView
                    android:id="@+id/gridView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnWidth="200dp"
                    android:numColumns="auto_fit"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:stretchMode="columnWidth"
                    android:gravity="center"
                    android:isScrollContainer="false"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp"
                    android:paddingBottom="0dp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <RelativeLayout
    android:id="@+id/overlay_panel"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/overlay_dark"
    android:layout_gravity="right" >

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Add your favourite restaurant to your shortlist by touching the heart icon"
            android:id="@+id/overlay_description"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffffff"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="100dp"
            android:layout_alignEnd="@+id/overlay_button" />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/overlay_icon"
            android:background="@drawable/profile_icon_favourites_white"
            android:layout_below="@+id/overlay_description"
            android:layout_alignStart="@+id/overlay_description"
            android:layout_marginTop="20dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="GOT IT"
            android:id="@+id/overlay_button"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_bg_orange"
            android:textSize="18dp"
            android:textColor="#ffffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp" />

    </RelativeLayout>


</FrameLayout>