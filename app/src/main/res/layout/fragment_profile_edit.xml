

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff2f2f2">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:layout_gravity="center_horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/background_woodtexture"
                android:id="@+id/relativeLayout2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:background="@drawable/page_lip_top"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/relativeLayout2"
                android:layout_alignParentStart="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:layout_width="150px"
                        android:layout_height="150px"
                        android:id="@+id/imageView2"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/profile_demoimage_blank"
                        android:focusableInTouchMode="false"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_alignBottom="@+id/mask"
                        android:layout_alignEnd="@+id/mask" />


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/mask"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/profile_demoimage"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EDIT"
                        android:id="@+id/profilepicbutton"
                        android:layout_gravity="center_horizontal"
                        android:background="#00ffffff"
                        android:textSize="10dp"
                        android:padding="0dp"
                        android:layout_alignParentBottom="true"
                        android:gravity="bottom|left"
                        android:paddingLeft="0dp"
                        android:paddingBottom="0dp"
                        android:layout_marginLeft="15dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textLastname"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:hint="Last Name"
                        android:ems="10"
                        android:inputType="textImeMultiLine"
                        android:imeActionLabel="Done"
                        android:imeOptions="actionDone"
                        android:lines="1"
                        android:padding="14dp"
                        android:textColor="#ffa1a1a1"
                        android:background="#ffffffff"
                        android:textSize="14dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_toEndOf="@+id/mask"
                        android:layout_marginLeft="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/textFirstname"
                        android:hint="First Name"
                        android:inputType="textImeMultiLine"
                        android:imeActionLabel="Done"
                        android:imeOptions="actionDone"
                        android:lines="1"
                        android:padding="14dp"
                        android:textColor="#ffa1a1a1"
                        android:background="#ffffffff"
                        android:textSize="14dp"
                        android:layout_below="@+id/textLastname"
                        android:layout_alignStart="@+id/textLastname"
                        android:layout_alignEnd="@+id/textLastname" />
                </RelativeLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/username"
                    android:hint="Username"
                    android:inputType="textImeMultiLine"
                    android:imeActionLabel="Done"
                    android:imeOptions="actionDone"
                    android:lines="1"
                    android:padding="14dp"
                    android:textColor="#ffa1a1a1"
                    android:background="#ffffffff"
                    android:textSize="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:inputType="textImeMultiLine"
                    android:imeActionLabel="Done"
                    android:imeOptions="actionDone"
                    android:lines="1"
                    android:hint="Email"
                    android:padding="14dp"
                    android:textColor="#ffa1a1a1"
                    android:background="#ffffffff"
                    android:textSize="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/password"
                    android:hint="Password"
                    android:padding="14dp"
                    android:textColor="#ffa1a1a1"
                    android:inputType="textImeMultiLine"
                    android:imeActionLabel="Done"
                    android:imeOptions="actionDone"
                    android:lines="1"
                    android:background="#ffffffff"
                    android:textSize="14dp"
                    android:password="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/passwordconfirm"
                    android:hint="Confirm Password"
                    android:inputType="textImeMultiLine"
                    android:imeActionLabel="Done"
                    android:imeOptions="actionDone"
                    android:lines="1"
                    android:padding="14dp"
                    android:textColor="#ffa1a1a1"
                    android:background="#ffffffff"
                    android:textSize="14dp"
                    android:password="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp" />



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="date"
                        android:imeActionLabel="Done"
                        android:imeOptions="actionDone"
                        android:lines="1"
                        android:ems="10"
                        android:id="@+id/dateofbirth"
                        android:layout_gravity="center_horizontal"
                        android:hint="mm/dd/yyyy"
                        android:padding="14dp"
                        android:textColor="#ffa1a1a1"
                        android:background="#ffffffff"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_toStartOf="@+id/dateofbirthButton" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Pick date"
                        android:id="@+id/dateofbirthButton"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/button_bg_orange"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:textColor="#ffffffff"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="10dp"
                        android:padding="0dp"
                        android:layout_alignTop="@+id/dateofbirth"
                        android:layout_alignBottom="@+id/dateofbirth"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Please select your gender"
                    android:id="@+id/genderHeading"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp" />

                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/radiogroupMF">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:id="@+id/radioButtonMale"
                        android:padding="14dp"
                        android:textColor="#ffa1a1a1"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:id="@+id/radioButtonFemale"
                        android:padding="14dp"
                        android:textColor="#ffa1a1a1"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp" />

                </RadioGroup>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Do you have any of these medical conditions?"
                    android:id="@+id/radiogroupHeading"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp" />

                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/radiogroup">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:id="@+id/radioButton0"
                        android:padding="14dp"
                        android:textColor="#ffa1a1a1"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diabetes"
                        android:id="@+id/radioButton1"
                        android:padding="14dp"
                        android:textColor="#ffa1a1a1"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heart Disease"
                        android:id="@+id/radioButton2"
                        android:padding="14dp"
                        android:textColor="#ffa1a1a1"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High Cholesterol"
                        android:id="@+id/radioButton3"
                        android:padding="14dp"
                        android:textColor="#ffa1a1a1"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High Blood Pressure"
                        android:id="@+id/radioButton4"
                        android:padding="14dp"
                        android:textColor="#ffa1a1a1"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        android:id="@+id/radioButton5"
                        android:padding="14dp"
                        android:textColor="#ffa1a1a1"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp" />
                </RadioGroup>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textImeMultiLine"
                    android:imeActionLabel="Done"
                    android:imeOptions="actionDone"
                    android:lines="1"
                    android:id="@+id/medicalconditions"
                    android:layout_gravity="left|top"
                    android:hint="If you selected other, please specify."
                    android:padding="14dp"
                    android:textColor="#ffa1a1a1"
                    android:background="#ffffffff"
                    android:textSize="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="left|top" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UPDATE"
                    android:id="@+id/buttonUpdate"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_bg_orange"
                    android:layout_margin="10dp"
                    android:textColor="#ffffffff" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/background_woodtexture"
                    android:id="@+id/relativeLayout">

                    <Button
                        style="@style/AppTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Go back"
                        android:id="@+id/buttonLogin"
                        android:drawableLeft="@drawable/icon_goback"
                        android:padding="10dp"
                        android:textColor="#ffb6a48c"
                        android:background="#00ffffff"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        </ScrollView>

    </LinearLayout>

