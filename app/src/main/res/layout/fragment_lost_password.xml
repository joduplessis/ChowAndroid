<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffefefef">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_woodtexture">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/page_lip_top"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Forgot your password? No prob, simply enter your email address and weâ€™ll send you instructions on how to update your password."
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#ff666666" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textImeMultiLine"
        android:imeActionLabel="Done"
        android:imeOptions="actionDone"
        android:lines="1"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal"
        android:hint="Email"
        android:padding="14dp"
        android:textColor="#ffa1a1a1"
        android:layout_margin="10dp"
        android:background="#ffffffff"
        android:textSize="14dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RECOVER PASSWORD"
        android:id="@+id/buttonPassword"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_bg_orange"
        android:textColor="#ffffffff"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_woodtexture"
        android:id="@+id/relativeLayout">

        <Button
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Go back and log in"
            android:id="@+id/buttonLogin"
            android:drawableLeft="@drawable/icon_goback"
            android:padding="10dp"
            android:textColor="#ffb6a48c"
            android:background="#00ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>